datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Environment variable for secure database URL
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model users {
  user_id       String   @id @default(uuid())          // Maps to user_id column
  user_name     String                                   // Maps to user_name column
  user_email    String   @unique                        // Maps to user_email column
  user_phone_no String   @db.VarChar(12)                // Maps to user_phone_no column
  user_password String                                   // Maps to user_password column
  created_at    DateTime @default(now())                // Maps to created_at column
  updated_at    DateTime @updatedAt                     // Maps to updated_at column
}
